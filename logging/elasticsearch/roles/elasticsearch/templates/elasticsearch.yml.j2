cluster.name: {{cluster_name}}
node.name: {{node_name}}
path.data: /var/lib/elasticsearch/{{node_name}}
path.logs: /var/log/elasticsearch/{{node_name}}
network.host: [{{ansible_host}}]
http.port: {{https_port}}
transport.port: {{transport_port}}
discovery.seed_hosts: {{seed_hosts}}
cluster.initial_master_nodes: {{master_hosts}}
http.host: {{ansible_host}}
xpack.security.enabled: true
xpack.security.http.ssl.enabled: true
xpack.security.transport.ssl.enabled: true
xpack.security.http.ssl.key: certs/{{node_name}}.key
xpack.security.http.ssl.certificate: certs/{{node_name}}.crt
xpack.security.http.ssl.certificate_authorities: certs/elastic_ca.pem
xpack.security.transport.ssl.key: certs/{{node_name}}.key
xpack.security.transport.ssl.certificate: certs/{{node_name}}.crt
xpack.security.transport.ssl.certificate_authorities: certs/elastic_ca.pem
{% if node_roles is defined %}
node.roles: {{ node_roles }}
{% endif %}
